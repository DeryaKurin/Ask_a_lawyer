<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <% include ../static/partials/messages.ejs %>

      <h1>Edit Question</h1>

      <form action="/categories/<%= question.categoryId %>/questions/<%= question.id %>/update" method="post">
        <div class="form-group">
          <label for="title">Question subject</label>
          <input value="<%= question.subject %>" type="text" class="form-control" name="subject" aria-describedby="subjectHelp" placeholder="Enter Subject">
          <small class="text-muted" id="subjectHelp">Subject must be 2 or more characters in length.</small>
        </div>
        <div class="form-group">
          <label for="body">Question body</label>
          <textarea rows="4" class="form-control" name="body" placeholder="Enter Question"><%= question.body %></textarea>
          <small class="text-muted" id="bodyHelp">body must be 10 or more characters in length.</small>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
