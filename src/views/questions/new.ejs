<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>



    <main class="container">
      <% include ../static/partials/messages.ejs %>

      <h1>New Question</h1>

      <form action="/categories/<%= categoryId %>/questions/create" method="post">
        <div class="form-group">
          <label for="subject">Question subject</label>
          <input type="text" class="form-control" name="subject" aria-describedby="subjectHelp" placeholder="Enter Subject">
        </div>
        <div class="form-group">
          <label for="body">Question body</label>
          <textarea rows="4" class="form-control" name="body" placeholder="Enter Question body"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
