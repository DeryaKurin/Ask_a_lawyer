<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>


      <h1>Sign up to be a Legal Advisor</h1>

      <form action="/users" method="post">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="name" class="form-control" name="name" aria-describedby="nameHelp" placeholder="Enter your name">
          <small class="text-muted" id="nameHelp">Name must be valid</small>
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Enter email">
          <small class="text-muted" id="emailHelp">email address must be a valid address</small>
        </div>

        <div class="form-group">
          <label for="phone">Phone</label>
          <input type="phone" class="form-control" name="phone" aria-describedby="phoneHelp" placeholder="Enter email">
          <small class="text-muted" id="phoneHelp">phone must be valid</small>
        </div>

        <div class="form-group">
          <input type="hidden" class="form-control" name="role" aria-describedby="roleHelp" value="1">
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" aria-describedby="passwordHelp" placeholder="Enter password">
          <small class="text-muted" id="passwordHelp">password must match confirmation below</small>
        </div>

        <div class="form-group">
          <label for="passwordConfirmation">Password confirmation</label>
          <input type="password" class="form-control" name="passwordConfirmation" aria-describedby="passwordHelp" placeholder="Enter password confirmation">
        </div>

        <button type="submit" class="btn btn-primary">Sign up</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
